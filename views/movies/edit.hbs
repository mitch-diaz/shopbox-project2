<div class="form__parent__container">

   <div class="form__title">
      <h2>Update Movie Details</h2>
   </div>

   <div class="form__wrapper">
      <form action="/movies/edit/{{id}}" method="POST">
         <div class="inputs__wrapper">
            
            <div class="label-input-col">
               <label>Title:</label>
               <input type="text" name="title" value="{{this.title}}">
            </div>
            
            <div class="label-input-col">
               <label>Genre:</label>
               <input type="text" name="genre" value="{{this.genre}}">
            </div>
            
            <div class="label-input-col">
               <label>Director:</label>
               <input type="text" name="director" value="{{this.director}}">
            </div>

            <div class="small__input__group-flex-row media-fwrap">
               <div class="label-input-col">
                  <label>Runtime:</label>
                  <input type="text" name="runtime" value="{{this.runtime}}">
               </div>
               <div class="label-input-col">
                  <label>Price:</label>
                  <input type="text" name="price" value="{{this.price}}">
               </div>
               <div class="label-input-col">
                  <label>Rating:</label>
                  <input type="text" name="rating" value="{{this.rating}}">
               </div>
               <div class="label-input-col">
                  <label>Inventory:</label>
                  <input type="text" name="inventory" value="{{this.inventory}}">
               </div>
            </div>
         </div>

         <button class="submit-btn">Submit</button>
      </form>

      <a class="form-pg-text-link" href="/movies/details/{{_id}}">>> Back to movie details</a>

   </div>
</div>
