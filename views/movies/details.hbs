{{#if currentUser}}

<main>

    <div class="content__container">

        <div class="details__container">

            <div class="details_heading_wrapper">
                <h2>{{title}}</h2>
                <p><a class="back-link" href="/movies">Back to movies list</a></p>
            </div>

            <div class="details-wrapper">
                <div class="details_flex_col">
                    <p class="detail-info"><span>Director:</span> {{director}}</p>
                    <p class="detail-info"><span>Genre:</span> {{genre}}</p>
                    <p class="detail-info"><span>Runtime:</span> {{runtime}}</p>
                    <p class="detail-info"><span>Rating:</span> {{rating}}</p>
                    <p class="detail-info"><span>Price:</span> ${{price}}</p>
                </div>
            </div>

        </div>
        
        <div class="detail-btns">
            <button class="edit-btn">
                <a href="/movies/edit/{{_id}}">
                <i class="fa-solid fa-file-pen"></i>
                Update
                </a>
            </button>
        
            <form action="/movies/delete/{{_id}}" method="POST">
                <button class="delete-btn">
                    <i class="fa-regular fa-trash-can"></i>
                    Delete?
                </button>
            </form>

            <p class="warning"><i class="fa-solid fa-triangle-exclamation"></i> Deleting this record cannot be undone</p>
        </div>

    </div>

</main>

{{/if}}