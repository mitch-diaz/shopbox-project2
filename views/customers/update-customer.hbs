{{#if currentUser}}

<div class="form__parent__container">
   <div class="form__title">
      <h2>Update customer information</h2>
   </div>

   <div class="form__wrapper">
         
      <form action="/customers/{{id}}" method="POST">
         <div class="inputs__wrapper">
               <div class="label-input-col">
                  <label>First Name:</label>
                  <input type="text" name="firstName" value="{{firstName}}">
               </div>
            
               <div class="label-input-col">
                  <label>Last Name:</label>
                  <input type="text" name="lastName" value="{{lastName}}">
               </div>
            
               <div class="label-input-col">
                  <label>Email:</label>
                  <input type="text" name="email" value="{{email}}">
               </div>
            
               <div class="small__input__group-flex-row media-fwrap">
                  <div class="label-input-col">
                     <label>Address:</label>
                     <input type="text" name="address" value="{{address}}">
                  </div>
                  <div class="label-input-col">
                     <label>Apartment #:</label>
                     <input type="text" name="apartmentNumber" value="{{apartmentNumber}}">
                  </div>
               </div>
               <div class="small__input__group-flex-row media-fwrap">
                  <div class="label-input-col">
                     <label>City:</label>
                     <input type="text" name="city" value="{{city}}">
                  </div>
                  <div class="label-input-col">
                     <label>State:</label>
                     <input type="text" name="state" value="{{state}}">
                  </div>
                  <div class="label-input-col">
                     <label>Zip:</label>
                     <input type="number" name="zip" value="{{zip}}">
                  </div>
               </div>
               <button class="submit-btn" type="submit">Submit</button>
         </div>

         <a class="form-pg-text-link" href="/customers/{{_id}}">>> Back to customer details</a>
         
      </form>
   </div>
</div>

{{/if}}