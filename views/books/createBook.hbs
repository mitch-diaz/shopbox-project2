<div class="form__parent__container">

   <div class="form__title">
      <h2>Add new book to inventory</h2>
   </div>

   <div class="form__wrapper">
      <form action="/books/createBook" method="POST">

         <div class="inputs__wrapper">
            
            <div class="label-input-col">
               <label>Title:</label>
               <input type="text" name="title">
            </div>

            <div class="label-input-col">
               <label>Author:</label>
               <input type="text" name="author">
            </div>

            <div class="label-input-col">
               <label>Genre:</label>
               <input type="text" name="genre">
            </div>

            <div class="small__input__group-flex-row media-fwrap">
               <div class="label-input-col">
                  <label># of pages:</label>
                  <input type="text" name="pages">
               </div>

               <div class="label-input-col">
                  <label>Price:</label>
                  <input type="text" name="price">
               </div>

               <div class="label-input-col">
                  <label>Inventory:</label>
                  <input type="text" name="inventory">
               </div>
            </div>
         </div>

         <button class="submit-btn" type="submit">Submit</button>
         
      </form>
   </div>
</div>
